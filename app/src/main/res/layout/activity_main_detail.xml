<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp" >

        <Button
            android:id="@+id/back_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/back" />

        <Button
            android:id="@+id/del_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/trash" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#E76B6B" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="제목"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="닉네임"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/mysex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(성별)"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/myage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(나이)"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:text="(운전자)" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f0f0f0"
            android:layout_marginTop="10dp" >

            <TextView
                android:id="@+id/dest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="##"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/dest"
                android:layout_alignLeft="@id/dest"
                android:layout_marginTop="10dp"
                android:text="날짜 : " />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/date_tv"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@id/date_tv"
                android:text="##" />


            <TextView
                android:id="@+id/isrepeat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/date_tv"
                android:layout_alignLeft="@id/date_tv"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="일회성"
                android:textColor="#FF0000" />


        </RelativeLayout>

        <TextView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="내용"
            android:layout_marginTop="20dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFD8D8"
            android:layout_marginTop="20dp" >

            <TextView
                android:id="@+id/condition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="&lt;조건&gt;" />

            <TextView
                android:id="@+id/gen_con"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/condition"
                android:layout_alignLeft="@id/condition"
                android:text="성별 : "
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/gen_con"
                android:layout_toRightOf="@id/gen_con"
                android:text="##" />

            <TextView
                android:id="@+id/dialogage_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/gen_con"
                android:layout_alignLeft="@id/gen_con"
                android:layout_marginTop="10dp"
                android:text="나이대 : " />

            <TextView
                android:id="@+id/age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/dialogage_tv"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@id/dialogage_tv"
                android:text="##" />

        </RelativeLayout>

        <Button
            android:id="@+id/signup_btn"
            android:layout_width="80dp"
            android:layout_height="48dp"
            android:text="참가하기"
            android:textColor="#FFF"
            android:background="@drawable/btn_pink"
            android:fontFamily="@font/nanum_bold"
            android:layout_marginTop="40dp"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

</LinearLayout>