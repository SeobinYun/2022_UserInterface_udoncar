<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp" >

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/mypage" />

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/mypage" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#E76B6B" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="제목"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="닉네임"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/mysex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(성별)"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/myage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(나이)"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f0f0f0"
            android:layout_marginTop="10dp" >

            <TextView
                android:id="@+id/dep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:text="##"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/dir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/dep"
                android:layout_alignBaseline="@id/dep"
                android:text=" -> " />

            <TextView
                android:id="@+id/arr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/dir"
                android:layout_alignBaseline="@id/dep"
                android:text="##" />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/dep"
                android:layout_alignLeft="@id/dep"
                android:text="날짜 : "
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/datedetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/date"
                android:layout_toRightOf="@id/date"
                android:text="0000" />


            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/date"
                android:layout_alignLeft="@id/date"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="시간 : " />

            <TextView
                android:id="@+id/timedetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/time"
                android:layout_toRightOf="@id/time"
                android:text="0000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="10dp"
                android:text="운전자" />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="내용"
            android:layout_marginTop="20dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFD8D8"
            android:layout_marginTop="20dp" >

            <TextView
                android:id="@+id/condition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="<조건>"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/condition"
                android:layout_alignLeft="@id/condition"
                android:text="성별 : "
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/condition_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/sex"
                android:layout_alignBaseline="@id/sex"
                android:text="##" />

            <TextView
                android:id="@+id/age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/sex"
                android:layout_alignLeft="@id/sex"
                android:text="나이대 : "
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/condition_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/age"
                android:layout_toRightOf="@id/age"
                android:text="##" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/age"
                android:layout_alignLeft="@id/age"
                android:text="일회성"
                android:textColor="#FF0000"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>

        </RelativeLayout>

        <Button
            android:layout_width="80dp"
            android:layout_height="48dp"
            android:text="참가하기"
            android:textColor="#FFF"
            android:background="@drawable/btn_pink"
            android:fontFamily="@font/nanumSquareNeo_bold"
            android:layout_marginTop="40dp"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

</LinearLayout>