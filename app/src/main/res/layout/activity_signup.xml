<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center"
        android:text="회원가입"
        android:textSize="20dp"
        android:textColor="#FF5B59"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#E76B6B"/>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginTop="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:padding="5dp"
            android:gravity="center_vertical"
            android:background="@xml/xml_border">

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="ID"
                android:textSize="14sp"/>

            <EditText
                android:id="@+id/id_edittext"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:hint="이메일 형식으로 작성해주세요. "
                android:textSize="12sp"
                android:inputType="textEmailAddress"
                android:digits="0123456789abcdefghijklmnopqrstuvwxyz.@"
                android:fontFamily="@font/nanum_regular"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:padding="5dp"
            android:layout_marginTop="3dp"
            android:gravity="center_vertical"
            android:background="@xml/xml_border"
            >

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="PW"
                android:textSize="13sp"/>

            <EditText
                android:id="@+id/pw_edittext"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:hint="비밀번호는 8자 이상 입력해주세요. "
                android:textSize="12sp"
                android:inputType="textPassword"
                android:fontFamily="@font/nanum_regular"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="3dp"
            android:background="@xml/xml_border"
            android:gravity="center_vertical"
            android:padding="5dp">

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="PW확인"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/doublepw_edittext"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanum_regular"
                android:hint="비밀번호를 다시 입력해주세요. "
                android:inputType="textPassword"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:padding="5dp"
            android:layout_marginTop="3dp"
            android:gravity="center_vertical"
            android:background="@xml/xml_border">

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="닉네임"
                android:textSize="13sp"/>

            <EditText
                android:id="@+id/name_edittext"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:hint="한글, 영어, 숫자, 특수문자 입력 가능"
                android:inputType="text"
                android:textSize="12sp"
                android:fontFamily="@font/nanum_regular"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="135dp"
            android:padding="5dp"
            android:layout_marginTop="3dp"
            android:gravity="center_vertical"
            android:background="@xml/xml_border">

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="지역"
                android:textSize="13sp"/>

            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Spinner
                    android:id="@+id/spinner_1"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:spinnerMode="dialog"/>

                <Spinner
                    android:id="@+id/spinner_2"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:spinnerMode="dialog"/>

                <Spinner
                    android:id="@+id/spinner_3"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:spinnerMode="dialog" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:padding="5dp"
            android:layout_marginTop="3dp"
            android:gravity="center_vertical"
            android:background="@xml/xml_border">

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="성별"
                android:textSize="13sp"/>

            <RadioGroup
                android:id="@+id/sex_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center"
                android:orientation="horizontal"
                >
                <RadioButton
                    android:id="@+id/sex_man"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="남자"
                    android:textSize="13sp"
                    android:buttonTint="#FF5B59"
                    android:checked="true"
                    />

                <RadioButton
                    android:id="@+id/sex_woman"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:text="여자"
                    android:textSize="13sp"
                    android:buttonTint="#FF5B59"
                    android:checked="false"
                    />
            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:padding="5dp"
            android:layout_marginTop="3dp"
            android:gravity="center_vertical"
            android:background="@xml/xml_border">

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="나이"
                android:textSize="13sp"/>

            <Spinner
                android:id="@+id/ages_spinner"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:spinnerMode="dialog"
                />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">

            <Button
                android:id="@+id/create_btn"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:background="@drawable/btn_pink"
                android:text="회원가입"
                android:textColor="#FFF" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>